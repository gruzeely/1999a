  // 
  //  && 
  //  WV> V
  //  VVV-> F
  //  WF-> F
  //  FVF-> F
  //  VFV-> F
  //  FFF ->F
  //   ||
  //   W -> V
  //   VF -> V
  //   FV-> V
  //   FF-> F
  
  
    
    
    
    
    
    
}
